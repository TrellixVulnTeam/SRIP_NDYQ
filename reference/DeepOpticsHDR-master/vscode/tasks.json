{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 建置使用中檔案",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "`pkg-config","--cflags","--libs", "opencv4`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "偵錯工具產生的工作。"
        },
